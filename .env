# Airflow Configuration
AIRFLOW_UID=50000
AIRFLOW_PROJ_DIR=.

# Airflow Database Configuration (PostgreSQL) 
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres/airflow

# Airflow Admin User
_AIRFLOW_WWW_USER_USERNAME=admin
_AIRFLOW_WWW_USER_PASSWORD=admin123

# Additional Python packages (จำเป็นสำหรับ webserver, PostgreSQL และ API calls)
_PIP_ADDITIONAL_REQUIREMENTS=psycopg2-binary pandas requests sqlalchemy

# Airflow Image Version (ใช้เวอร์ชันเดียวกับอาจารย์ที่เสถียร)
AIRFLOW_IMAGE_NAME=apache/airflow:2.7.3